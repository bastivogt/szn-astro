---
import NavLink from "./NavLink.astro";
//import NavLink from "./NavLink.jsx";
import { NAV_DATA, MENU_MAIN } from "../settings";
import Button from "./Button.jsx";

const navMain = NAV_DATA.filter((item) => {
    return item.menu === MENU_MAIN;
});

const navMainSorted = navMain.sort((a, b) => a.order - b.order);

// <nav class="navbar navbar-expand-lg bg-primary shadow" data-bs-theme="dark">
---

<nav class="navbar navbar-expand-lg bg-dark shadow" data-bs-theme="dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img
                src="/assets/images/logo-szn-text-grey-light.svg"
                height="60"
            />
        </a>
        <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
        >
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                {
                    navMainSorted.map((item) => {
                        return (
                            <li class="nav-item">
                                <NavLink href={item.href}>{item.title}</NavLink>
                            </li>
                        );
                    })
                }
            </ul>
        </div>
    </div>
</nav>
